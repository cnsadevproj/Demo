rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // Helper Functions for Custom Token Validation
    // ============================================

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if user is a teacher (Firebase Auth with teacherId as UID)
    function isTeacher(teacherId) {
      return isAuthenticated() && request.auth.uid == teacherId;
    }

    // Check if user is a student (Custom Token with role claim)
    function isStudent() {
      return isAuthenticated() && request.auth.token.role == 'student';
    }

    // Check if student belongs to this teacher
    function isStudentOf(teacherId) {
      return isStudent() && request.auth.token.teacherId == teacherId;
    }

    // Get student code from token
    function getStudentCode() {
      return request.auth.token.studentCode;
    }

    // Check if student is accessing their own data
    function isOwnStudentData(teacherId, studentCode) {
      return isStudentOf(teacherId) && getStudentCode() == studentCode;
    }

    // ============================================
    // Teacher Data
    // ============================================
    match /teachers/{teacherId} {
      // Teachers can read/write their own data
      // Students can read their teacher's public data
      allow read: if isTeacher(teacherId) || isStudentOf(teacherId);
      allow write: if isTeacher(teacherId);

      // 학급 데이터
      match /classes/{classId} {
        allow read: if isTeacher(teacherId) || isStudentOf(teacherId);
        allow write: if isTeacher(teacherId);

        // 잔디 데이터
        match /grass/{date} {
          allow read: if isTeacher(teacherId) || isStudentOf(teacherId);
          allow write: if isTeacher(teacherId);
        }

        // 팀 데이터
        match /teams/{teamId} {
          allow read: if isTeacher(teacherId) || isStudentOf(teacherId);
          allow write: if isTeacher(teacherId);
        }

        // 쿠키샵 아이템
        match /cookieShopItems/{itemId} {
          allow read: if isTeacher(teacherId) || isStudentOf(teacherId);
          allow write: if isTeacher(teacherId);
        }

        // 쿠키샵 구매 요청 - 학생이 본인 요청만 생성 가능
        match /cookieShopRequests/{requestId} {
          allow read: if isTeacher(teacherId) || isStudentOf(teacherId);
          allow create: if isStudentOf(teacherId) &&
            request.resource.data.studentCode == getStudentCode();
          allow update, delete: if isTeacher(teacherId);
        }

        // 배틀 데이터
        match /battles/{battleId} {
          allow read: if isTeacher(teacherId) || isStudentOf(teacherId);
          allow write: if isTeacher(teacherId);
        }

        // 워드클라우드 세션
        match /wordclouds/{sessionId} {
          allow read: if isTeacher(teacherId) || isStudentOf(teacherId);
          allow write: if isTeacher(teacherId);

          // 워드클라우드 응답 - 학생은 본인 응답만 작성 가능
          match /responses/{studentCode} {
            allow read: if isTeacher(teacherId) || isStudentOf(teacherId);
            allow write: if isTeacher(teacherId) ||
              (isStudentOf(teacherId) && getStudentCode() == studentCode);
          }
        }
      }

      // 학생 데이터 - 학생은 본인 데이터만 수정 가능
      match /students/{studentCode} {
        allow read: if isTeacher(teacherId) || isStudentOf(teacherId);
        allow write: if isTeacher(teacherId) || isOwnStudentData(teacherId, studentCode);
      }

      // 상점 아이템 (교사별)
      match /shop/{itemId} {
        allow read: if isTeacher(teacherId) || isStudentOf(teacherId);
        allow write: if isTeacher(teacherId);
      }

      // 팀 데이터 (레거시)
      match /teams/{teamId} {
        allow read: if isTeacher(teacherId) || isStudentOf(teacherId);
        allow write: if isTeacher(teacherId);
      }

      // 소원 데이터 - 학생이 본인 소원만 생성 가능
      match /wishes/{wishId} {
        allow read: if isTeacher(teacherId) || isStudentOf(teacherId);
        allow create: if isStudentOf(teacherId) &&
          request.resource.data.studentCode == getStudentCode();
        allow update, delete: if isTeacher(teacherId);
      }

      // 쿠키 상점 아이템 (전체 클래스 공유)
      match /cookieShopItems/{itemId} {
        allow read: if isTeacher(teacherId) || isStudentOf(teacherId);
        allow write: if isTeacher(teacherId);
      }

      // 쿠키 상점 구매 요청 (전체 클래스 공유)
      match /cookieShopRequests/{requestId} {
        allow read: if isTeacher(teacherId) || isStudentOf(teacherId);
        allow create: if isStudentOf(teacherId) &&
          request.resource.data.studentCode == getStudentCode();
        allow update, delete: if isTeacher(teacherId);
      }

      // 상점 물품 요청 (학생 → 교사)
      match /itemSuggestions/{suggestionId} {
        allow read: if isTeacher(teacherId) || isStudentOf(teacherId);
        allow create: if isStudentOf(teacherId) &&
          request.resource.data.studentCode == getStudentCode();
        allow update, delete: if isTeacher(teacherId);
      }

      // 학급 그룹 (소원 공유용)
      match /classGroups/{groupId} {
        allow read: if isTeacher(teacherId) || isStudentOf(teacherId);
        allow write: if isTeacher(teacherId);
      }
    }

    // ============================================
    // Game Data - 인증된 사용자만 접근
    // ============================================
    match /games/{gameId} {
      // 게임 읽기는 인증된 모든 사용자
      allow read: if isAuthenticated();
      // 게임 생성/수정은 교사만 (token에 teacherId가 없는 경우 = 교사)
      allow create, update: if isAuthenticated();
      allow delete: if isAuthenticated() && request.auth.token.role != 'student';

      match /players/{playerId} {
        allow read: if isAuthenticated();
        // 학생은 본인 플레이어 데이터만 작성
        allow write: if isAuthenticated() && (
          request.auth.token.role != 'student' ||
          request.auth.token.studentCode == playerId
        );
      }

      match /rounds/{roundId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
      }

      // 팀 쿠키 배틀 - 팀 데이터
      match /teams/{teamId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
      }

      // 팀 쿠키 배틀 - 학생 정보
      match /studentInfo/{studentCode} {
        allow read: if isAuthenticated();
        // 학생은 본인 정보만 작성
        allow write: if isAuthenticated() && (
          request.auth.token.role != 'student' ||
          request.auth.token.studentCode == studentCode
        );
      }

      // 끝말잇기 - 단어 히스토리
      match /history/{docId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
      }
    }

    // ============================================
    // Legacy Paths (deprecated, kept for compatibility)
    // ============================================

    // 상점 아이템 (공개 - 레거시)
    match /shop/{itemId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.token.role != 'student';
    }

    // 시스템 로그
    match /system/{document=**} {
      allow read: if isAuthenticated() && request.auth.token.role != 'student';
      allow write: if false;
    }
  }
}
